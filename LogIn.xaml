<Window x:Class="Patient_Record_System.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Log In" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
       
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF1976D2" Offset="0" />
                <GradientStop Color="#FFBBDEFB" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

      
        <Label Content="Patient Record System" HorizontalAlignment="Center" VerticalAlignment="Top" 
               FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,20,0,0" />


        <Label Content="Username" HorizontalAlignment="Left" Margin="450,150,0,0" VerticalAlignment="Top" 
               Foreground="White" FontWeight="Bold" />
        <TextBox x:Name="txtusername" HorizontalAlignment="Left" Margin="450,180,0,0" 
                 VerticalAlignment="Top" Width="250" FontSize="14" Padding="5" />

      
        <Label Content="Password" HorizontalAlignment="Left" Margin="450,230,0,0" VerticalAlignment="Top" 
               Foreground="White" FontWeight="Bold" />
        <PasswordBox x:Name="passbox" HorizontalAlignment="Left" Margin="450,260,0,0" 
                     VerticalAlignment="Top" Width="250" FontSize="14" Padding="5" />

       
        <Button Content="Log In" x:Name="btnsubmit" HorizontalAlignment="Left" Margin="500,320,0,0" 
                VerticalAlignment="Top" Width="150" Height="35" FontWeight="Bold" Background="#FF0D47A1" 
                Foreground="White" Click="btnsubmit_Click" BorderBrush="#FF0D47A1" />

      
        <Button x:Name="btnforgotpassword" Content="Forgot Password?" HorizontalAlignment="Left" Margin="500,370,0,0" 
                VerticalAlignment="Top" Width="150" Height="25" FontStyle="Italic" Background="Transparent" 
                Foreground="#FF0D47A1" BorderBrush="Transparent" Click="btnforgotpassword_Click" />

    </Grid>
</Window>


